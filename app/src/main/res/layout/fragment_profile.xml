<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Kotak Profil dengan Gambar dan Username -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_corner_background"> <!-- Ganti dengan drawable yang sesuai -->

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="biiwahyu09"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- Baris Text View -->
        <!-- Input Fields dengan label di atasnya -->

    <TextView
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:text="wahyudi"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:text="wahyudi@gmail.com"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"/> <!-- Menambahkan margin bawah -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption"/>

    <!-- Menambahkan margin bawah -->

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:text="Pemuda baik hati"
        android:background="@drawable/rounded_edittext" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Bergabung"/>
    <TextView
        android:id="@+id/created_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:text="01-12-2023"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="30dp"/>


    <!-- Update Profile dan LogOut -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/profilupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:backgroundTint="@android:color/holo_red_light"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="9dp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>


</LinearLayout>
